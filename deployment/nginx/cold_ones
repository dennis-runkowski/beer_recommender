server {
    listen 80;
    server_name crushingcoldones.com www.crushingcoldones.com;

    location / {
        include uwsgi_params;
        uwsgi_pass unix:/opt/beer_recommender/flask_app.sock;

        if ($http_x_forwarded_proto != "https") {
            return 301 https://$host$request_uri;
        }
    }
    location =/health.html {
        root /var/www/html/;
    }
}
